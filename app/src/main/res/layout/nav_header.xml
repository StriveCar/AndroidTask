<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:clipChildren="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/backphono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="250dp"
            android:maxHeight="170dp"
            android:scaleType="fitXY"
            android:src="@drawable/backphono2" />

        <TextView
            android:id="@+id/art_word"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/art_word"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:clipChildren="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="5dp">

        <FrameLayout
            android:id="@+id/icon_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background2"
            android:padding="1dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:id="@+id/icon_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bysl5" />

            </androidx.cardview.widget.CardView>
        </FrameLayout>


        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/icon_image1"
            android:text="用户名"
            android:textColor="@color/gray3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_introduce"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/icon_image1"
            android:elevation="4dp"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="1"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="这是我的个性签名。"
            android:textColor="@color/gray3"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#40000000" />

</LinearLayout>
